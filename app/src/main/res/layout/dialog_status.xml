<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/statusBarSize"
    android:background="@color/status_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/state_BT_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/state_BT_IMG"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:paddingTop="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/connect_bt_connected" />

                <TextView
                    android:id="@+id/status_BT_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@android:color/black"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/state_USB_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/state_USB_IMG"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:paddingTop="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/connect_usb_connected" />

                <TextView
                    android:id="@+id/status_USB_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="8sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/state_Device_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:id="@+id/state_Device_IMG"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/connect_device_unconnected" />

            <TextView
                android:id="@+id/status_Device_TV"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="设备未连接"
                android:textColor="@android:color/black"
                android:textSize="8sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorMain" />
    </RelativeLayout>
</LinearLayout>