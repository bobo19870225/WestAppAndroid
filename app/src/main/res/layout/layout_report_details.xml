<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="报告名称："
            android:textSize="@dimen/textSize16"
            android:paddingLeft="20dp"
            android:maxLines="1"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize16"
            android:lines="1"
            android:maxLines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="序列号："
            android:gravity="right"
            android:textSize="@dimen/textSize16"
            android:paddingLeft="20dp"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/detail_unsn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize16"
            android:lines="1"
            android:maxLines="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="硬件类型："
            android:gravity="right"
            android:textSize="@dimen/textSize16"
            android:paddingLeft="20dp"
            android:lines="1"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/detail_hardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize16"
            android:lines="1"
            android:maxLines="1"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="30dp"
        android:background="#aaaaaa"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:id="@+id/detail_function_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="诊断功能"
                android:gravity="center"
                android:textSize="@dimen/textSize16"
                android:paddingLeft="20dp"
                android:lines="1"
                android:maxLines="1"
                android:padding="5dp"
            />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:background="#aaaaaa"
                   />

            <TextView
                android:id="@+id/detail_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="@dimen/textSize16" />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#aaaaaa"
            />

            <LinearLayout
                android:id="@+id/detail_fault_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="1"
                    android:padding="5dp"
                    android:paddingLeft="20dp"
                    android:maxLines="1"
                    android:text="诊断故障"
                    android:textSize="@dimen/textSize16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#aaaaaa"
                    />

                <TextView
                    android:id="@+id/detail_fault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize16"
                    android:padding="10dp"
                    />
            </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#aaaaaa"
        />


</LinearLayout>
