<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >
        
        <TextView
            android:id="@+id/input_Message_TV"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="title"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/input_please"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/input_Count_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="14sp"
                android:textColor="@color/red"

                />

            <TextView
                android:id="@+id/input_Type_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/red"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/input_password_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                />
        </LinearLayout>


        <EditText
            android:id="@+id/input_Edit_ET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="numberPassword"
            android:layout_margin="4dp"
            android:hint="输入密码"
            android:background="@drawable/bg_edittext"
            android:lines="1"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:digits="@string/digits_diagnosis_password"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/input_ReInput_BTN"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="重输"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:background="@drawable/bg_dialog_negative"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <Button
                android:id="@+id/input_Commit_BTN"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="确定"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_dialog_positive"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>