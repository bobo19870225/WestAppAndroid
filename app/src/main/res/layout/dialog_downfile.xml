<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_toolbar"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/file_Doanload"
            android:textColor="#ffffff"
            android:textSize="20sp"

            />


        <LinearLayout
            android:id="@+id/Load_Step1_Layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:visibility="gone"

            >

            <TextView
                android:id="@+id/Load_List_NONE_Tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_Load_NONE"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:visibility="gone"
                />
            <ListView
                android:id="@+id/Load_backUp_ListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/grey"
                android:dividerHeight="1dp"

                >

            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Load_Step2_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:minHeight="60dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/file_DOWN_restore"
                    android:textSize="16sp"
                    android:textColor="@color/black"

                    />

               <!-- <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:text="("
                    />

                <TextView
                    android:id="@+id/Load_Progress_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:text="56"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:text="%)"
                    />-->
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/Load_Step3_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/Load_Step3_Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_DOWN_ready"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:minHeight="60dp"
                />

        </LinearLayout>

      <!--  <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >




            </LinearLayout>
        </ScrollView>-->


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eeeeee">

            <Button
                android:id="@+id/DOWN_Negative_BTN"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/negativebutton_backgroud_style"
                android:text="@string/tip_no"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/DOWN_Positive_BTN"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/positivebutton_backgroud_style"
                android:text="@string/tip_yes"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textAllCaps="false"

                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>