<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:id="@+id/language_zh_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/language_zh"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/language_zh"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize16" />

        <RadioButton
            android:id="@+id/radio_zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/language_zh"
            android:layout_alignBottom="@+id/language_zh"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:button="@null"
            android:background="@mipmap/btn_radio_on_holo_light"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede"/>

    <RelativeLayout
        android:id="@+id/language_en_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/language_en"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/language_en"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize16"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_en"
            android:layout_alignBaseline="@+id/language_en"
            android:layout_alignBottom="@+id/language_en"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:button="@null"
            android:background="@mipmap/btn_radio_on_disabled_holo_light"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede"/>

</LinearLayout>
