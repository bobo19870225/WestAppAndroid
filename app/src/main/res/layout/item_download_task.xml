<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
    <TextView
        android:id="@+id/onekeytext"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="dddd"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/onekeyname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:textSize="@dimen/textSize16"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/item_FileSize_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="38.6M"
        android:textSize="12sp"
        android:textColor="@color/conn_text_address"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"


        />

    <TextView
        android:id="@+id/onekeyprogressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/textSize16"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="10%"
        />

    <LinearLayout
        android:id="@+id/item_Status_Layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingRight="15dp"
        android:paddingLeft="10dp"

        >

        <ImageView
            android:id="@+id/item_Status_IMG"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@mipmap/icon_download_wait"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

        <TextView
            android:id="@+id/item_Status_LABEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待下载"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            />

    </LinearLayout>


</LinearLayout>
